{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
  },
  "include": ["/**/*.ts"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "include": ["jest"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
